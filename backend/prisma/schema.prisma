generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Professor {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  disciplinas Disciplina[] // Relacionamento 1:N com Disciplina
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("professor")
}

model Aluno {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  disciplinas Disciplina[] @relation("AlunoDisciplina") // Relacionamento N:M com Disciplina
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("aluno")
}

model Disciplina {
  id        Int         @id @default(autoincrement())
  name      String
  professor Professor   @relation(fields: [professorId], references: [id])
  professorId Int

  alunos    Aluno[]     @relation("AlunoDisciplina") // Relacionamento N:M com Aluno

  @@unique([name, professorId]) // Garante que um professor n√£o pode ter duas disciplinas com o mesmo nome
}